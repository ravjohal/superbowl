<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Header update</th>
      <th>Header details</th>
      <th>Header first</th>
      <th>Header second</th>
      <th>Header third</th>
      <th>Header pot title</th>
      <th>Header middle</th>
      <th>Header left</th>
      <th>Footer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.header_update %></td>
        <td><%= message.header_details %></td>
        <td><%= message.header_first %></td>
        <td><%= message.header_second %></td>
        <td><%= message.header_third %></td>
        <td><%= message.header_pot_title %></td>
        <td><%= message.header_middle %></td>
        <td><%= message.header_left %></td>
        <td><%= message.footer %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path %>
